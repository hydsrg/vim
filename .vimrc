" Set syntax on
syntax on

" Change colorscheme 
colorscheme industry

" Whitespace
" set nowrap
" set textwidth=79
" set formatoptions=tcqrn1
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround

" Show line numbers
set number

" Blink cursor on error instead of beeping (grr)
set visualbell

" Show file stats
set ruler

" Encoding
set encoding=utf-8

" Status bar
set laststatus=2

" Spell checking in Spanish
set spell
setlocal spell spelllang=es
